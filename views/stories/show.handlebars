
  <div class="ui stackable grid center vertical aligned container"  style="margin: 4em 0em 2em">
    <div class="row">
      <div class="sixteen wide column">
        <div class="ui header">
          <h1>{{story.title}}</h1>
        </div>
        <div class="meta">
          <span class="date">{{formateDate story.date 'MMMM Do YYYY'}}</span>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="ten wide column">
        <div class="ui stacked segment">
          {{{story.body}}}
        </div>
      </div>
      <div class="six wide column">
        <div class="ui card">
          <div class="blurring dimmable image">
            <div class="ui dimmer">
              <div class="ui content">
                <div class="center">
                  <a class="ui inverted button" href="/stories/user/{{story.user.id}}">More Stories</a>
                </div>
              </div>
            </div>
            <img src="{{story.user.image}}">
          </div>
        <div class="content">
        <a class="header">{{story.user.firstName}}</a>
          <div class="meta">
            <span class="date">{{story.user.lastName}}</span>
          </div>
        </div>
      <div class="extra content">
        <a href="/stories/user/{{story.user.id}}">
          <i class="users icon"></i>
          More Stories
        </a>
      </div>
    </div>
    </div>
    {{#if story.allowComments}}
    <div class="row">
      <div class="sixteen wide column">
        <div class="ui comments" style="margin: 1em">
          <h3 class="ui dividing header">Comments</h3>
          {{#each story.comments}}
          <div class="comment">
            <a class="avatar">
              <img src="{{commentUser.image}}">
            </a>
            <div class="content">
              <a class="author">{{commentUser.firstName}} {{commentUser.lastName}}</a>
              <div class="metadata">
                <span class="date">{{formateDate commentDate 'MMMM Do YYYY'}}</span>
              </div>
              <div class="text">
                {{commentBody}}
              </div>
              <div class="actions">
                <a class="reply">Reply</a>
              </div>
            </div>
          </div>
          {{/each}}
          {{#if user}}
          <form class="ui reply form" action="/stories/comments/{{story.id}}" method="POST">
            <div class="ui action input">
              <input type="text" name="commentBody">
              <button type="submit" class="ui teal button">
                Send
              </button>
            </div>
          </form>
          {{else}}
          <div class="ui message" >
            <span class="header">Please <a href="/auth/google">login</a> to leave a comment</span>
          </div>
          {{/if}}
        <div>
      </div>
    </div>
    {{/if}}
  </div>
